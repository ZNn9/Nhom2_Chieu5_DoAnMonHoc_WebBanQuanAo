@section scripts {
    <script src="~/UserView_Ogani/js/jquery-3.3.1.min.js"></script>
    <script src="~/UserView_Ogani/js/jquery-ui.min.js"></script>
    <script >
        // Đoạn mã AJAX của bạn ở đây
        $(document).ready(function () {
            if ($("#productTitle").length) { // Kiểm tra xem #productTitle tồn tại
                $("#productTitle").autocomplete({
                    source: "api/productAPI/search" // Sử dụng dấu ngoặc kép
                });
            }
            $("a.add-to-cart").click(function (event) {
                // Ngăn trình duyệt chuyển hướng sang URL của thẻ a
                event.preventDefault();

                // Lấy dữ liệu từ thuộc tính data-*
                var productId = $(this).data("productid");
                var quantity = $(this).data("quantity");

                // Gửi yêu cầu AJAX đến server
                $.ajax({
                    url: '/ShoppingCart/AddToCart', // URL tới action
                    type: 'POST', // Phương thức HTTP
                    data: { productId: productId, quantity: quantity }, // Dữ liệu gửi đi
                    success: function (response) {
                        // Xử lý thành công, cập nhật giao diện nếu cần
                        alert("Thêm sản phẩm vào giỏ hàng thành công!");
                    },
                    error: function () {
                        // Xử lý lỗi
                        alert("Có lỗi xảy ra, vui lòng thử lại.");
                    }
                });
            });

        });
    </script>
}
