@model IEnumerable<Nhom2_Chieu5_DoAnCuoiMon_WebBanQuanAo.Models.Product>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			<th>Description</th>
			<th>Image</th>
			<th>Category</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var product in Model)
		{
			<tr>
				<td>
					@product.Name
				</td>
				<td>
					@product.Price
				</td>
				<td>
					@product.Description
				</td>
				<td>
					@if (product.ImageUrl != null)
					{
						<img src= "@product.ImageUrl" alt= "Product Image" style= "width: 300px; height: auto; " />
					}
				</td>
				
				<td>
					<!--Đang lỗi chưa thể kết nối database Category để lấy name-->
					@Html.DisplayFor(modelItem => product.Category.Name)
				</td>
				<td>
					@Html.ActionLink("Display", "Display", new { id = @product.Id }) |
				</td>
			</tr>
		}
	</tbody>
</table>