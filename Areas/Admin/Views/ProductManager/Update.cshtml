@model Nhom2_Chieu5_DoAnCuoiMon_WebBanQuanAo.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories"
                        class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">Product Image</label>
                <!-- Hiển thị địa chỉ của ImageUrl hiện có -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl)){
                    <input type="file" asp-for="ImageUrl" class="form-control" readonly />
                }
                <img src="@Model.ImageUrl" alt="Product Image" style="max-width:200px;" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="0">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="Index" type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
    <script>
        function validateQuantity(input) {
            if (input.value < 0) {
                input.value = 0; // Nếu giá trị nhập vào là số âm, đặt lại giá trị thành 0
            }
        }
        
    </script>
}
